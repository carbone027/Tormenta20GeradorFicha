                                <div class="power-card-icon">
                                  <%= getPowerIcon(poder, tipo) %>
                                </div>

                                <h6 class="power-card-name">
                                  <%= poder.nome %>
                                </h6>
                                <p class="power-card-type">
                                  <%= tipoNome %>
                                </p>
                              </div>

                              <div class="power-card-content">
                                <p class="power-card-description">
                                  <%= poder.descricao %>
                                </p>

                                <div class="power-card-details">
