                <span>🔘</span>
                <%= circulo %>º Círculo
              </h4>
              <div class="spell-circle-count">(<%= magiasCirculo.length %> <%= magiasCirculo.length === 1 ? 'magia' : 'magias' %>)</div>
              <button type="button" class="spell-circle-toggle" data-target="<%= circulo %>">
                <span class="toggle-icon">📂</span>
              </button>
            </div>

            <div class="spells-grid" id="spellsGrid-<%= circulo %>">
              <% magiasCirculo.forEach(magia => { %>
                <div class="character-spell-card" 
                     data-spell-id="<%= magia.id %>" 
                     data-type="<%= magia.tipo.toLowerCase() %>"
                     data-circle="<%= circulo %>"
                     data-school="<%= magia.escola.toLowerCase() %>">
                  
                  <div class="spell-card-header">
                    <div class="spell-icon-container">
                      <% 
                        let spellIcon = '✨';
                        const nome = (magia.nome || '').toLowerCase();
                        
                        // Ícones específicos por nome e tipo
                        if (nome.includes('cura') || nome.includes('curar') || nome.includes('restaurar')) spellIcon = '💚';
                        else if (nome.includes('fogo') || nome.includes('chama') || nome.includes('incendiar')) spellIcon = '🔥';
                        else if (nome.includes('gelo') || nome.includes('frio') || nome.includes('congelar')) spellIcon = '❄️';
                        else if (nome.includes('raio') || nome.includes('relâmpago') || nome.includes('elétrico')) spellIcon = '⚡';
                        else if (nome.includes('luz') || nome.includes('brilho') || nome.includes('clarão')) spellIcon = '☀️';
                        else if (nome.includes('trevas') || nome.includes('sombra') || nome.includes('escuridão')) spellIcon = '🌑';
                        else if (nome.includes('proteção') || nome.includes('escudo') || nome.includes('barreira')) spellIcon = '🛡️';
                        else if (nome.includes('ilusão') || nome.includes('invisibilidade') || nome.includes('disfarce')) spellIcon = '👻';
                        else if (nome.includes('voo') || nome.includes('voar') || nome.includes('levitar')) spellIcon = '🦅';
                        else if (nome.includes('teleporte') || nome.includes('portal') || nome.includes('dimensão')) spellIcon = '🌀';
                        else if (nome.includes('invocação') || nome.includes('convocar') || nome.includes('conjurar')) spellIcon = '👤';
                        else if (nome.includes('detecção') || nome.includes('detectar') || nome.includes('sentir')) spellIcon = '👁️';
                        else if (nome.includes('transformação') || nome.includes('forma') || nome.includes('metamorfose')) spellIcon = '🔄';
                        else if (nome.includes('explosão') || nome.includes('área') || nome.includes('rajada')) spellIcon = '💥';
                        else if (nome.includes('míssil') || nome.includes('projétil') || nome.includes('dardo')) spellIcon = '🎯';
                        else if (nome.includes('sono') || nome.includes('dormir') || nome.includes('adormecer')) spellIcon = '😴';
                        else if (nome.includes('medo') || nome.includes('terror') || nome.includes('pânico')) spellIcon = '😱';
                        else if (nome.includes('charme') || nome.includes('sedução') || nome.includes('fascinar')) spellIcon = '😍';
                        else if (nome.includes('força') || nome.includes('potência') || nome.includes('poder')) spellIcon = '💪';
                        else if (nome.includes('velocidade') || nome.includes('pressa') || nome.includes('rapidez')) spellIcon = '💨';
                        else if (nome.includes('água') || nome.includes('aquático') || nome.includes('maremoto')) spellIcon = '💧';
                        else if (nome.includes('terra') || nome.includes('pedra') || nome.includes('rocha')) spellIcon = '🌍';
                        else if (nome.includes('vento') || nome.includes('ar') || nome.includes('brisa')) spellIcon = '💨';
                        else if (nome.includes('ácido') || nome.includes('corrosão') || nome.includes('dissolver')) spellIcon = '🧪';
                        else if (nome.includes('veneno') || nome.includes('tóxico') || nome.includes('envenenar')) spellIcon = '☣️';
                        else if (nome.includes('maldição') || nome.includes('amaldiçoar') || nome.includes('azarar')) spellIcon = '🖤';
                        else if (nome.includes('bênção') || nome.includes('abençoar') || nome.includes('sagrar')) spellIcon = '🙏';
                        else if (nome.includes('comunicação') || nome.includes('falar') || nome.includes('línguas')) spellIcon = '💬';
                        else if (nome.includes('reparar') || nome.includes('consertar') || nome.includes('restaurar')) spellIcon = '🔧';
                        else if (nome.includes('criar') || nome.includes('criação') || nome.includes('fabricar')) spellIcon = '🎨';
                        else if (nome.includes('destruir') || nome.includes('destruição') || nome.includes('aniquilar')) spellIcon = '💀';
                        else if (nome.includes('tempo') || nome.includes('temporal') || nome.includes('cronologia')) spellIcon = '⏰';
                        else if (nome.includes('espaço') || nome.includes('espacial') || nome.includes('dimensional')) spellIcon = '🌌';
                        else if (nome.includes('moral') || nome.includes('espírito') || nome.includes('ânimo')) spellIcon = '💫';
                        else if (nome.includes('resistência') || nome.includes('tolerância') || nome.includes('imunidade')) spellIcon = '🛡️';
                        else if (magia.tipo === 'Divina') spellIcon = '✨';
                        else if (magia.tipo === 'Arcana') spellIcon = '🔮';
                        else if (magia.tipo === 'Universal') spellIcon = '🌟';
                      %>
                      <div class="spell-icon"><%= spellIcon %></div>
                      
                      <!-- Status Indicators -->
                      <div class="spell-status-indicators">
                        <% if (magia.fonte === 'classe') { %>
                          <span class="spell-status-badge class" title="Magia de Classe">⚔️</span>
                        <% } else { %>
                          <span class="spell-status-badge chosen" title="Magia Escolhida">⚡</span>
                        <% } %>
                        
                        <% if (magia.custo_pm && magia.custo_pm > 0) { %>
                          <span class="spell-status-badge cost" title="<%= magia.custo_pm %> PM">💙</span>
                        <% } %>
                        
                        <span class="spell-status-badge circle" title="<%= circulo %>º Círculo">🔘</span>
                      </div>
                    </div>

                    <div class="spell-info">
                      <h5 class="spell-name"><%= magia.nome %></h5>
                      <p class="spell-school-type">
                        <%= magia.escola %> • <%= magia.tipo %>
                      </p>
                    </div>

                    <div class="spell-cost-info">
                      <% if (magia.custo_pm && magia.custo_pm > 0) { %>
                        <div class="spell-cost <%= magia.custo_pm > (character.pontos_mana || 0) ? 'insufficient' : 'available' %>">
                          <div class="cost-value"><%= magia.custo_pm %></div>
                          <small class="cost-label">PM</small>
                        </div>
                      <% } else { %>
                        <div class="spell-cost free">
                          <div class="cost-value">0</div>
                          <small class="cost-label">PM</small>
                        </div>
                      <% } %>
                    </div>
                  </div>

                  <div class="spell-card-content">
                    <p class="spell-description"><%= magia.descricao %></p>

                    <!-- Detalhes da Magia -->
                    <div class="spell-mechanics">
                      <% if (magia.execucao) { %>
                        <div class="spell-mechanic">
                          <span class="mechanic-icon">⏰</span>
                          <span class="mechanic-label">Execução:</span>
                          <span class="mechanic-value"><%= magia.execucao %></span>
                        </div>
                      <% } %>
                      
                      <% if (magia.alcance) { %>
                        <div class="spell-mechanic">
                          <span class="mechanic-icon">🎯</span>
                          <span class="mechanic-label">Alcance:</span>
                          <span class="mechanic-value"><%= magia.alcance %></span>
                        </div>
                      <% } %>
                      
                      <% if (magia.duracao) { %>
                        <div class="spell-mechanic">
                          <span class="mechanic-icon">⏱️</span>
                          <span class="mechanic-label">Duração:</span>
                          <span class="mechanic-value"><%= magia.duracao %></span>
                        </div>
                      <% } %>
                    </div>

                    <!-- Tags da Magia -->
                    <div class="spell-tags">
                      <span class="spell-tag circle"><%= circulo %>º Círculo</span>
                      <span class="spell-tag type <%= magia.tipo.toLowerCase() %>">
                        <%= magia.tipo %>
                      </span>
                      <span class="spell-tag school"><%= magia.escola %></span>
                      
                      <% if (magia.fonte === 'classe') { %>
                        <span class="spell-tag source-class">Classe</span>
                      <% } else { %>
                        <span class="spell-tag source-choice">Escolhida</span>
                      <% } %>
                      
                      <% if (magia.custo_pm && magia.custo_pm > 0) { %>
                        <span class="spell-tag cost">
                          <%= magia.custo_pm %> PM
                        </span>
                      <% } else { %>
                        <span class="spell-tag free">Gratuita</span>
                      <% } %>
                    </div>

                    <!-- Origem da Magia -->
                    <% if (magia.observacoes) { %>
                      <div class="spell-origin">
                        <small><strong>Origem:</strong> <%= magia.observacoes %></small>
                      </div>
                    <% } %>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
        <% } %>
      <% }); %>
    </div>

    <!-- Resumo das Magias -->
    <div class="spells-summary">
      <div class="summary-card">
        <h4>📊 Resumo das Magias</h4>
        <div class="summary-stats">
          <div class="summary-stat">
            <span class="stat-icon">🔮</span>
            <span class="stat-label">Total:</span>
            <span class="stat-value"><%= magias.length %></span>
          </div>
          
          <% 
            const magiasArcanas = magias.filter(m => m.tipo === 'Arcana').length;
            const magiasDivinas = magias.filter(m => m.tipo === 'Divina').length;
            const magiasUniversais = magias.filter(m => m.tipo === 'Universal').length;
            const magiasClasse = magias.filter(m => m.fonte === 'classe').length;
            const magiasEscolhidas = magias.filter(m => m.fonte === 'escolha').length;
            const custoTotal = magias.reduce((total, m) => total + (m.custo_pm || 0), 0);
          %>
          
          <% if (magiasArcanas > 0) { %>
            <div class="summary-stat">
              <span class="stat-icon">🔮</span>
              <span class="stat-label">Arcanas:</span>
              <span class="stat-value"><%= magiasArcanas %></span>
            </div>
          <% } %>
          
          <% if (magiasDivinas > 0) { %>
            <div class="summary-stat">
              <span class="stat-icon">✨</span>
              <span class="stat-label">Divinas:</span>
              <span class="stat-value"><%= magiasDivinas %></span>
            </div>
          <% } %>
          
          <% if (magiasUniversais > 0) { %>
            <div class="summary-stat">
              <span class="stat-icon">🌟</span>
              <span class="stat-label">Universais:</span>
              <span class="stat-value"><%= magiasUniversais %></span>
            </div>
          <% } %>
          
          <div class="summary-stat">
            <span class="stat-icon">⚔️</span>
            <span class="stat-label">De Classe:</span>
            <span class="stat-value"><%= magiasClasse %></span>
          </div>
          
          <div class="summary-stat">
            <span class="stat-icon">⚡</span>
            <span class="stat-label">Escolhidas:</span>
            <span class="stat-value"><%= magiasEscolhidas %></span>
          </div>
          
          <div class="summary-stat">
            <span class="stat-icon">💙</span>
            <span class="stat-label">Custo Total:</span>
            <span class="stat-value"><%= custoTotal %> PM</span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% } else if (character.classe_nome && ['Arcanista', 'Bardo', 'Clérigo', 'Druida'].includes(character.classe_nome)) { %>
  <!-- Classe mágica sem magias -->
  <div class="no-spells-message magical-class">
    <div class="no-spells-icon">🔮</div>
    <h4>Nenhuma Magia Conhecida</h4>
    <p>
      Este personagem é da classe mágica <strong><%= character.classe_nome %></strong> mas ainda não possui magias registradas.
      <br>
      <strong>Nível:</strong> <%= character.nivel || 1 %> • <strong>PM Disponíveis:</strong> <%= character.pontos_mana || 0 %>
    </p>
    <div class="spell-recommendations">
      <p><strong>💡 Dica:</strong> Use a edição para adicionar magias da sua classe.</p>
      <a href="/personagens/<%= character.id %>/editar" class="btn btn-secondary">
        ✏️ Adicionar Magias
      </a>
    </div>
  </div>
<% } else { %>
  <!-- Classe não-mágica -->
  <div class="no-spells-message non-magical-class">
    <div class="no-spells-icon">⚔️</div>
    <h4>Classe Não-Mágica</h4>
    <p>
      A classe <strong><%= character.classe_nome || 'do personagem' %></strong> não possui acesso a magias.
      <br>
      <strong>Classes Mágicas disponíveis:</strong> Arcanista, Bardo, Clérigo, Druida
    </p>
  </div>
<% } %>

    <!-- História e Personalidade -->
    <% if (character.historia_pessoal || character.personalidade || character.objetivos) { %>
      <div class="background-section">
        <h3>📜 História e Personalidade</h3>
        <div class="background-grid">
          <% if (character.historia_pessoal) { %>
            <div class="background-card">
              <h4>📖 História Pessoal</h4>
              <div class="background-content">
                <p><%= character.historia_pessoal %></p>
              </div>
            </div>
          <% } %>
          
          <% if (character.personalidade) { %>
            <div class="background-card">
              <h4>🎭 Personalidade</h4>
              <div class="background-content">
                <p><%= character.personalidade %></p>
              </div>
            </div>
          <% } %>
          
          <% if (character.objetivos) { %>
            <div class="background-card">
              <h4>🎯 Objetivos e Motivações</h4>
              <div class="background-content">
                <p><%= character.objetivos %></p>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    <% } %>

    <!-- Informações Técnicas -->
    <div class="technical-info">
      <h3>ℹ️ Informações do Sistema</h3>
      <div class="tech-grid">
        <div class="tech-card">
          <h4>📅 Criação</h4>
          <p><%= new Date(character.created_at).toLocaleDateString('pt-BR', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
          }) %></p>
        </div>
        
        <% if (character.updated_at && character.updated_at !== character.created_at) { %>
          <div class="tech-card">
            <h4>✏️ Última Edição</h4>
            <p><%= new Date(character.updated_at).toLocaleDateString('pt-BR', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric',
              hour: '2-digit',
              minute: '2-digit'
            }) %></p>
          </div>
        <% } %>
        
        <div class="tech-card">
          <h4>🆔 ID do Personagem</h4>
          <p><code>#<%= character.id %></code></p>
        </div>
      </div>
    </div>

    <!-- Ações Adicionais -->
    <div class="additional-actions">
      <div class="actions-card">
        <h3>🛠️ Ações Disponíveis</h3>
        <div class="actions-grid">
          <button class="action-btn utility-btn" onclick="window.print()">
            🖨️ Imprimir Ficha
          </button>
          
          <button class="action-btn utility-btn" onclick="exportCharacter()">
            📥 Exportar Dados
          </button>
          
          <button class="action-btn utility-btn" onclick="shareCharacter()">
            📤 Compartilhar
          </button>
          
          <button class="action-btn danger-btn" onclick="confirmDelete()">
            🗑️ Excluir Personagem
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Modal de Confirmação de Exclusão -->
  <div id="deleteModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3>⚠️ Confirmar Exclusão</h3>
      </div>
      <div class="modal-body">
        <p>Tem certeza que deseja excluir o personagem <strong><%= character.nome %></strong>?</p>
        <p class="warning-text">Esta ação não pode ser desfeita!</p>
      </div>
      <div class="modal-actions">
        <button class="btn btn-secondary" onclick="closeDeleteModal()">Cancelar</button>
        <button class="btn btn-danger" onclick="deleteCharacter()">🗑️ Excluir Personagem</button>
      </div>
    </div>
  </div>

<% } else { %>
  <!-- Personagem não encontrado -->
  <section class="content-section active">
    <div class="error-state">
      <div class="error-card">
        <div class="error-icon">😔</div>
        <h2>Personagem Não Encontrado</h2>
        <p>O personagem que você está procurando não existe ou você não tem permissão para visualizá-lo.</p>
        <div class="error-actions">
          <a href="/personagens" class="nav-btn">📋 Meus Personagens</a>
          <a href="/personagens/criar" class="btn btn-secondary">✨ Criar Novo</a>
        </div>
      </div>
    </div>
  </section>
<% } %>

<!-- Script específico para visualização de personagem -->
<script src="/scripts/character-view.js"></script>

<%- include('../partials/footer') %>